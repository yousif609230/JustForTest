def lambda_handler(event, context):
    try:
        # Extract lambda_function_name from headers
        lambda_function_name = event['headers']['function_name']
    except KeyError:
        return {
            'statusCode': 400,
            'body': "Missing 'function_name' header in the request."
        }

    environment_variables = {
        'Variable1': 'Value1',
        'Variable2': 'Value2'
    }

    response = update_lambda_environment(lambda_function_name, environment_variables)
    return {
        'statusCode': 200,
        'body': response
    }
